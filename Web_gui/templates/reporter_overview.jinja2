{% extends "_reporter_main.jinja2" %}

{% block title %} Reporter {% endblock %}


{% block main %}
    <table class="table table-striped table-dark table-hover table-sm">
         {% if reports %}
<thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Time stamp</th>
      <th scope="col">Passed tags</th>
      <th scope="col">Defect tags</th>
      <th scope="col">Invoices</th>
      <th scope="col">Customer id</th>
    </tr>
  </thead>
<tbody>
{% for report in reports%}
    <th>{{loop.index}}</th>
    <td>{{ report["date"]}}</td>
    <td>{{ report["passed"]}}</td>
    <td>{{ report["defect"]}}</td>
    <td>{{ report["invoice"]}}</td>
    <td>{{ report["customer_id"]}}</td>


    </tr>
{% endfor %}
{% else %}
            <p> No Customers :( </p>
         {% endif %}

</tbody>
</table>
{% endblock %}
