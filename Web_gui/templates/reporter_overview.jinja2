{% extends "_reporter_main.jinja2" %}

{% block title %} Reporter {% endblock %}

{% block main %}
    <table id="statistics_table"  style="width: 70%;" class="table table-striped table-dark table-hover table-sm">
         {% if customers %}
             <thead class="thead-dark">
    <tr>
      <th scope="col">Customers in database</th>
      <th scope="col">Passed actions</th>
      <th scope="col">Defects</th>
      <th scope="col">Created invoices</th>
      <th scope="col">Created screenshots</th>

    </tr>
  </thead>
        <tbody>
             <tr>
        <td class="statistics">{{ customers }}</td>
        <td class="statistics">{{ passed_actions }}</td>
        <td class="statistics">{{ defects }}</td >
        <td class="statistics">{{ invoices }}</td>
        <td class="statistics">{{ screenshots }}</td>
    </tr>

{% else %}
            <p style="color: #9fcdff"> No data </p>
         {% endif %}

</tbody>
</table>
{% endblock %}
