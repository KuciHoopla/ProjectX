{% extends "_main.jinja2" %}

{% block title %} Add customer {% endblock %}


{% block main %}
    <div style="width: 90%">
        <form action="{{ url_for("add_customer") }}" method="post">
          <div class="form-row">
            <div class="form-group col-sm-3">
                  <label for="inputUsername" >username:</label>
                <input type="text" name="username" class="form-control" id="inputEmail3">
            </div>
            <div class="form-group col-sm-3">
              <label for="inputSurname">surname</label>
              <input name="surname" type="text" class="form-control" id="inputSurname">
            </div>
          </div>
                      <div class="form-row">

          <div class="form-group col-sm-3">
            <label for="inputAddress">address</label>
            <input name="address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
          </div>
          <div class="form-group col-sm-3">
            <label for="inputEmail">email</label>
            <input name="email" type="email" class="form-control" id="inputEmail" placeholder="john@garfield.com">
          </div>
                                      </div>

          <div class="form-row">

            <div class="form-group row-cols-2 col-sm-3">
              <label for="inputConsumption">consumption</label>
              <input name="consumption" type="text" class="form-control" id="inputConsumption">
            </div>
            <div class="form-group col-sm-3">
              <label for="inputTariff">tariff</label>
              <select  name="tariff" id="Tariff" class="form-control">
                <option name="tariff" selected>1</option>
                <option name="tariff" >2</option>
                <option name="tariff">3</option>
                <option name="tariff">4</option>
                <option name="tariff">5</option>
              </select>
            </div>
                          </div>

             </div>

          <button type="submit" class="btn btn-primary">Add customer</button>
        </form>
    </div>
{% endblock %}
